{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "store:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://soundcloud.com"
        },
        {
          "url": "https://*.soundcloud.com"
        },
        {
          "url": "https://*.sndcdn.com"
        }
      ],
      "deny": []
    },
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**/*" }]
    },
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "log:default"
  ]
}
